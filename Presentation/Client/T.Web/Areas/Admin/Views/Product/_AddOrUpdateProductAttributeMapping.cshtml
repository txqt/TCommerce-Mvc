@model ProductAttributeMappingModel


<input asp-for="Id" class="form-control" hidden />
<input hidden class="form-control" asp-for="ProductId" value="@Model.ProductId" />
<div class="form-group">
    <label for="@Html.DisplayNameFor(model => model.ProductAttributeName)">Chọn thuộc tính cho sản phẩm</label>
    <select class="form-control" id="@Html.DisplayNameFor(model => model.ProductAttributeName)" asp-items="Model.AvailableProductAttributes" asp-for="ProductAttributeId">
    </select>
</div>
<div class="form-group">
    <label for="@Html.DisplayNameFor(model => model.DisplayOrder)">@Html.DisplayNameFor(model => model.DisplayOrder)</label>
    <input style="min-width: 100px; width: 300px" type="number" min="0" class="form-control" asp-for="DisplayOrder" id="@Html.DisplayNameFor(model => model.DisplayOrder)" aria-describedby="emailHelp" placeholder="@Html.DisplayNameFor(model => model.DisplayOrder)">
</div>
<div class="form-check">
    <input type="checkbox" asp-for="IsRequired" class="form-check-input" id="@Html.DisplayNameFor(model => model.IsRequired)">
    <label class="form-check-label" for="@Html.DisplayNameFor(model => model.IsRequired)">@Html.DisplayNameFor(model => model.IsRequired)</label>
</div>
<button type="submit" class="btn btn-primary mt-2">Save</button>


