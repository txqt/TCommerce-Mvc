@model ProductAttributeMappingModel

<h3 class="text-info">Sửa thuộc tính liên kết với sản phẩm</h3>
<form method="post" style="background-color: #fff; padding: 20px; border-radius: 10px">
    @(await Html.PartialAsync("_AddOrUpdateProductAttributeMapping", Model))
</form> 
<hr />
@{
    var pav = new DataTableViewModel
            {
                TableId = "dataTable-pav",
                TableTitle = $"Danh sách thuộc tính {Model.ProductAttributeName}",
                CreateUrl = Url.Action("ProductAttributeValueCreate", "Product", new { productAttributeMappingId = Model.Id }),
                EditUrl = Url.Action("EditProductAttributeValue", "Product"),
                DeleteUrl = Url.Action("DeleteProductAttributeValue", "Product"),
                CreateButtonName = "Tạo mới",
                GetDataUrl = Url.Action("GetValueProductMapping", "Product", new { id = Model.Id }),
                PopupWindow = true,
                Columns = new List<ColumnDefinition>
                    {
                    new ColumnDefinition { Data = "name" },
                    new ColumnDefinition { Data = "priceAdjustment" },
                    new ColumnDefinition { Data = "weightAdjustment" },
                    new ColumnDefinition { Data = "isPreSelected", RenderType = RenderType.RenderBoolean },
                    new ColumnDefinition { Data = "pictureThumbnailUrl" },
                    new ColumnDefinition { RenderType = RenderType.RenderButtonEdit },
                    new ColumnDefinition { RenderType = RenderType.RenderButtonRemove },
                    }
            };
}
@await Html.PartialAsync("_Table", pav)
