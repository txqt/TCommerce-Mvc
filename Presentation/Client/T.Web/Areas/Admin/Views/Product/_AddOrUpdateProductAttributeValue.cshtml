<div class="form-group">
    <label for="@Html.DisplayNameFor(model => model.Name)">@Html.DisplayNameFor(model => model.Name)</label>
    <input style="min-width: 100px; width: 300px" type="text" class="form-control" asp-for="Name" id="@Html.DisplayNameFor(model => model.Name)" placeholder="@Html.DisplayNameFor(model => model.Name)">
</div>
<div class="form-group">
    <label for="@Html.DisplayNameFor(model => model.Name)">@Html.DisplayNameFor(model => model.PriceAdjustment)</label>
    <input style="min-width: 100px; width: 300px" type="number" min="0" class="form-control" asp-for="PriceAdjustment" id="@Html.DisplayNameFor(model => model.Name)" placeholder="@Html.DisplayNameFor(model => model.Name)">
</div>
<div class="form-group">
    <div class="form-check">
        <input type="checkbox" asp-for="PriceAdjustmentUsePercentage" class="form-check-input" id="@Html.DisplayNameFor(model => model.PriceAdjustmentUsePercentage)">
        <label class="form-check-label" for="@Html.DisplayNameFor(model => model.PriceAdjustmentUsePercentage)">@Html.DisplayNameFor(model => model.PriceAdjustmentUsePercentage)</label>
    </div>
</div>
<div class="form-group">
    <label for="@Html.DisplayNameFor(model => model.WeightAdjustment)">@Html.DisplayNameFor(model => model.WeightAdjustment)</label>
    <input style="min-width: 100px; width: 300px" type="number" min="0" class="form-control" asp-for="WeightAdjustment" id="@Html.DisplayNameFor(model => model.WeightAdjustment)" aria-describedby="@Html.DisplayNameFor(model => model.WeightAdjustment)" placeholder="@Html.DisplayNameFor(model => model.WeightAdjustment)">
</div>
<div class="form-group">
    <div class="form-check">
        <input type="checkbox" asp-for="IsPreSelected" class="form-check-input" id="@Html.DisplayNameFor(model => model.IsPreSelected)">
        <label class="form-check-label" for="@Html.DisplayNameFor(model => model.IsPreSelected)">@Html.DisplayNameFor(model => model.IsPreSelected)</label>
    </div>
</div>
<div class="form-group">
    <label for="@Html.DisplayNameFor(model => model.DisplayOrder)">@Html.DisplayNameFor(model => model.DisplayOrder)</label>
    <input style="min-width: 100px; width: 300px" type="number" min="0" class="form-control" asp-for="DisplayOrder" id="@Html.DisplayNameFor(model => model.DisplayOrder)" aria-describedby="emailHelp" placeholder="@Html.DisplayNameFor(model => model.DisplayOrder)">
</div>
<div class="form-group row">
    <div class="col-sm-3">
        <label for="@Html.DisplayNameFor(model => model.ProductPictureModels)">@Html.DisplayNameFor(model => model.ProductPictureModels)</label>
    </div>
    <div class="col-sm-9">
        <div class="attribute-picture-selection-block clearfix">
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="@Html.NameFor(x => x.PictureId)" value="0" id="id_image_0" @(Model.PictureId == 0 ? "checked" : "")>
                    Không có ảnh
                </label>
            </div>
            @foreach (var picture in Model.ProductPictureModels)
            {
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="@Html.NameFor(x => x.PictureId)" value="@picture.PictureId" id="id_image_@picture.PictureId" @(Model.PictureId == picture.PictureId ? "checked" : "" )>
                        <img src="@picture.PictureUrl" alt="" title="" width="75" class="mb-1">
                    </label>
                </div>
            }
        </div>
    </div>
</div>
<button type="submit" class="btn btn-primary mt-2">Save</button>


