@model PermissionMappingModel

<style>
    table th, table td {
        padding: 10px 20px 10px 10px;
    }
</style>

<form method="post" asp-action="UpdateRolePermissions">
    <div class="content-header clearfix">
        <h1 class="float-left">
            Quản lý quyền
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                Cập nhật
            </button>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="scroll-wrapper">
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                <strong>Quyền</strong>
                                            </th>
                                            @foreach (var role in Model.AvailableCustomerRoles)
                                            {
                                                <th scope="col">
                                                    <strong>@role.Name</strong>
                                                </th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pr in Model.AvailablePermissions)
                                        {
                                            <tr>
                                                <td>
                                                    <span>@pr.Name</span>
                                                </td>
                                                @foreach (var role in Model.AvailableCustomerRoles)
                                                {
                                                    <td>
                                                        <input type="checkbox" name="Allowed[@pr.SystemName][@role.Id]" value="true" @(Model.Allowed[pr.SystemName][role.Id] ? "checked" : "") />
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>