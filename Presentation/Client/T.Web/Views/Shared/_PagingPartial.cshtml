@model MetaData
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item">
                <a data-page="@(Model.CurrentPage - 1)" class="page-link page-link-prev" href="#" aria-label="Previous">
                    <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span>Prev
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a data-page="@i" class="page-link" href="javascript:CatalogProducts.build();">@i</a>
            </li>
        }

        <li class="page-item-total">of @Model.TotalPages</li>

        @if (Model.CurrentPage != Model.TotalPages)
        {
            <li class="page-item" style="@(Model.CurrentPage == Model.TotalPages ? "display: none;" : "")">
                <a data-page="@(Model.CurrentPage + 1)" class="page-link page-link-next" href="#" aria-label="Next">
                    Next <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                </a>
            </li>
        }
    </ul>
</nav>