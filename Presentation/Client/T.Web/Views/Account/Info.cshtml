@using T.Library.Model.ViewsModel;
@model AccountInfoModel
@{
    Layout = "_InfoLayout";
}
@if(Model is not null)
{
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label for="inputFirstName" class="form-label">First Name</label>
            <input type="text" asp-for="FirstName" class="form-control" id="inputFirstName">
        </div>
        <div class="mb-3">
            <label for="inputFirstName" class="form-label">Last Name</label>
            <input type="text" asp-for="LastName" class="form-control" id="inputFirstName">
        </div>
        <div class="mb-3">
            <label for="inputBirthDay" class="form-label">Sinh nhật</label>
            <input type="date" asp-for="DateOfBirth" class="form-control" id="inputBirthDay">
        </div>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email address</label>
            <input type="email" asp-for="Email" class="form-control" id="inputEmail">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}
